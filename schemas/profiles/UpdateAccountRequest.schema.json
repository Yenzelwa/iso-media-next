{
  "$id": "https://isolakwamuntu.com/schemas/profiles/UpdateAccountRequest.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "minLength": 1,
      "description": "User's display name"
    },
    "phone": {
      "type": ["string", "null"],
      "description": "User's phone number"
    },
    "avatar_url": {
      "type": ["string", "null"],
      "format": "uri",
      "description": "URL to user's avatar image"
    },
    "billing_address": {
      "type": "object",
      "properties": {
        "street": {
          "type": "string",
          "description": "Street address"
        },
        "city": {
          "type": "string",
          "description": "City"
        },
        "state": {
          "type": "string",
          "description": "State or province"
        },
        "postal_code": {
          "type": "string",
          "description": "Postal or zip code"
        },
        "country": {
          "type": "string",
          "description": "Country code"
        }
      },
      "additionalProperties": false,
      "minProperties": 1
    }
  },
  "additionalProperties": false,
  "minProperties": 1
}