{
  "$id": "https://isolakwamuntu.com/schemas/profiles/UpdateProfileRequest.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "minLength": 1,
      "description": "User's display name"
    },
    "phone": {
      "type": ["string", "null"],
      "description": "User's phone number"
    },
    "avatar_url": {
      "type": ["string", "null"],
      "format": "uri",
      "description": "URL to user's avatar image"
    }
  },
  "additionalProperties": false,
  "minProperties": 1
}