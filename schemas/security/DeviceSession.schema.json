{
  "$id": "https://isolakwamuntu.com/schemas/security/DeviceSession.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["id", "device", "browser", "ip", "location", "current", "last_active"],
  "properties": {
    "id": {
      "type": "string",
      "description": "Device session ID"
    },
    "device": {
      "type": "string",
      "description": "Device name"
    },
    "browser": {
      "type": "string",
      "description": "Browser name"
    },
    "ip": {
      "type": "string",
      "format": "ipv4",
      "description": "IP address"
    },
    "location": {
      "type": "string",
      "description": "Geographic location"
    },
    "current": {
      "type": "boolean",
      "description": "Whether this is the current session"
    },
    "last_active": {
      "type": "string",
      "format": "date-time",
      "description": "Last active time in ISO 8601 format"
    }
  },
  "additionalProperties": false
}