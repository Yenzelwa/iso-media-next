{
  "$id": "https://isolakwamuntu.com/schemas/catalog/HeroItems.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["items"],
  "properties": {
    "items": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "title", "image_path", "rating", "likes", "release_date", "type"],
        "properties": {
          "id": {
            "anyOf": [{"type": "string"}, {"type": "number"}],
            "description": "Video ID"
          },
          "title": {
            "type": "string",
            "description": "Video title"
          },
          "description": {
            "type": "string",
            "description": "Video description"
          },
          "image_path": {
            "type": "string",
            "format": "uri",
            "description": "Video thumbnail image URL"
          },
          "video_path": {
            "type": ["string", "null"],
            "format": "uri",
            "description": "Video file URL"
          },
          "rating": {
            "type": "number",
            "minimum": 0,
            "maximum": 5,
            "description": "Video rating"
          },
          "likes": {
            "type": "integer",
            "minimum": 0,
            "description": "Number of likes"
          },
          "dislikes": {
            "type": "integer",
            "minimum": 0,
            "default": 0,
            "description": "Number of dislikes"
          },
          "release_date": {
            "type": "string",
            "format": "date-time",
            "description": "Release date in ISO 8601 format"
          },
          "type": {
            "type": "object",
            "required": ["id", "name", "category"],
            "properties": {
              "id": {
                "type": "integer",
                "description": "Type ID"
              },
              "name": {
                "enum": ["Series", "Documentary", "Movie"],
                "description": "Content type"
              },
              "category": {
                "type": "object",
                "required": ["id", "name"],
                "properties": {
                  "id": {
                    "type": "integer",
                    "description": "Category ID"
                  },
                  "name": {
                    "enum": ["Spirituality", "Wellness", "Education", "Science"],
                    "description": "Content category"
                  }
                }
              }
            }
          }
        },
        "additionalProperties": false
      },
      "description": "Array of featured hero videos"
    }
  },
  "additionalProperties": false
}